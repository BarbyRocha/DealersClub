SELECT 
  leilomas_LEILOES.VEICULOS.VEI_PLACA,
  CONCAT(SUBSTRING(leilomas_LEILOES.VEICULOS.VEI_PLACA, 1, 3), SUBSTRING(leilomas_LEILOES.VEICULOS.VEI_PLACA, -4)) AS PLACA_AJUSTADA,
  leilomas_LEILOES.VEICULOS.VEI_CHASSI AS CHASSI,
  leilomas_LEILOES.VEICULOS.VEI_SITUACAO AS SITUACAO,
  leilomas_LEILOES.VEICULOS_CUSTOS.VCC_VALOR AS CUSTO,
  leilomas_LEILOES.VEICULOS_CUSTOS.VCC_INFORMACAO AS OBS,
  leilomas_LEILOES.VEICULOS_CUSTOS_CATEGORIAS.VCT_NOME AS CATEGORIA
FROM 
  leilomas_LEILOES.VEICULOS
INNER JOIN 
  leilomas_LEILOES.VEICULOS_CUSTOS ON leilomas_LEILOES.VEICULOS.VEI_ID = leilomas_LEILOES.VEICULOS_CUSTOS.VEI_ID
INNER JOIN 
  leilomas_LEILOES.VEICULOS_CUSTOS_CATEGORIAS ON leilomas_LEILOES.VEICULOS_CUSTOS.VCT_ID = leilomas_LEILOES.VEICULOS_CUSTOS_CATEGORIAS.VCT_ID;
